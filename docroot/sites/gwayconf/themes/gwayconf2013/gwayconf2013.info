regions[main_nav] = Main Navigation
regions[page_breadcrumb] = Breadcrumbs
regions[sub_nav] = Sub Navigation
regions[preface] = Preface
regions[sidebar_first] = Sidebar First
regions[sidebar_last] = Sidebar Last
regions[content_preface] = Content Preface
regions[content] = Content
regions[content_postscript] = Content Postscript
regions[content_footer] = Content Footer
regions[postscript_top] = Postscript Top
regions[postscript_bottom] = Postscript Bottom
regions[postscript_bottom_col_one] = Postscript Bottom Column One
regions[postscript_bottom_col_two] = Postscript Bottom Column Two
regions[footer] = Footer
regions[page_bottom] = Page bottom

; Options --------------------------------------------------------------------
; these are the checkboxes that are available on the theme settings page.

; these are the stock options
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
