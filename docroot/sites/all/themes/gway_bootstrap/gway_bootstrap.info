
; Theme Info -----------------------------------------------------------------
; required information about the theme

name = Gateway Bootstrap
description = Prototype is a base theme for Drupal 7 which converts the core template files to HTML5 markup.
core = 7.x
engine = phptemplate
version = "7.x-1.0"

; Stylesheets  ---------------------------------------------------------------
; We use [screen] instead of [all] to avoid browser styles affecting
; other media types. IE stylesheets are loaded through template.php

stylesheets[screen][] = css/gway-bootstrap.css


; Javascript  ---------------------------------------------------------------
; html5.js is required for IE to understand the new elements like article
; ref: http://remysharp.com/2009/01/07/html5-enabling-script/
; ------------------------------
scripts[] = js/html5.js
scripts[] = js/jquery.formalize.js
scripts[] = js/scripts.js



; Regions --------------------------------------------------------------------
; these content regions are available for block placement
; some are special hidden regions: page_top, page_bottom, and help

; these are the stock regions
regions[highlighted] = Highlighted
regions[page_top] = Page top
regions[page_bottom] = Page bottom
regions[help] = Help
regions[content] = Content


regions[header_top] = Header Top
regions[search_bar] = Search Bar
regions[header] = Header
regions[main_nav] = Main Navigation
regions[secondary_nav] = Secondary Navigation
regions[preface] = Preface
regions[content_preface] = Content Preface 
regions[content_postscript] = Content Postscript
regions[content_footer] = Content Footer
regions[sidebar_first] = Sidebar First
regions[sidebar_last] = Sidebar Last
regions[bottom_main_nav] = Bottom Main Navigation
regions[postscript_top] = Postscript Top
regions[postscript_bottom] = Postscript Bottom
regions[footer] = Footer


; Options --------------------------------------------------------------------
; these are the checkboxes that are available on the theme settings page.

; these are the stock options
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; additional theme settings
